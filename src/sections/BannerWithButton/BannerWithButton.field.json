{
  "label": "[Banner] Text + button",
  "summary": "{{fields.headline}}",
  "name": "BannerWithButton",
  "widget": "object",
  "fields": [
    {
      "label": "Hide",
      "name": "hide",
      "widget": "boolean",
      "default": false,
      "required": false
    },
    {
      "label": "Anchor link url",
      "name": "anchor",
      "widget": "string",
      "default": "",
      "required": false
    },
    {
      "label": "Headline",
      "name": "headline",
      "widget": "string",
      "default": "This is a banner. It has a button.",
      "required": false
    },
    {
      "label": "Subheadline (appears on top)",
      "name": "subheadline",
      "widget": "string",
      "default": "This is a subheadline",
      "required": false
    },
    {
      "label": "Text alignment",
      "name": "text_alignment",
      "widget": "select",
      "options": ["Left", "Right"],
      "default": "Left"
    },
    {
      "label": "Button text",
      "name": "button_text",
      "widget": "string",
      "default": "Learn more",
      "required": false
    },
    {
      "label": "Button URL",
      "name": "button_url",
      "widget": "string",
      "default": "https://google.com",
      "required": false
    },
    {
      "label": "Background image",
      "name": "image_url",
      "widget": "image",
      "default": "https://images.unsplash.com/photo-1503516459261-40c66117780a",
      "required": false
    },
    {
      "label": "Overlay color",
      "name": "overlay_color",
      "widget": "select",
      "options": ["None", "Charcoal", "Orange", "Red", "Green", "Yellow"],
      "default": "Charcoal"
    },
    {
      "label": "Opacity",
      "name": "opacity",
      "widget": "number",
      "default": 0.7,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1,
      "value_type": "float",
      "required": false
    }
  ]
}
