{
  "label": "[Teams] Team Section",
  "name": "Teams",
  "widget": "object",
  "min": 1,
  "fields": [
    {
      "label": "Hide",
      "name": "hide",
      "widget": "boolean",
      "default": false,
      "required": false
    },
    {
      "label": "Anchor link url",
      "name": "anchor",
      "widget": "string",
      "default": "",
      "required": false
    },
    {
      "label": "Include line",
      "name": "include_line",
      "widget": "boolean",
      "default": true,
      "required": false
    },
    {
      "label": "Text alignment",
      "name": "alignment",
      "widget": "select",
      "options": ["left", "center", "right"],
      "default": "center"
    },
    {
      "label": "Content",
      "name": "markdown_content",
      "widget": "markdown",
      "default": "#This is a title"
    },
    {
      "label": "Background image",
      "name": "image_url",
      "widget": "image",
      "default": "",
      "required": false
    },
    {
      "label": "Overlay color",
      "name": "overlay_color",
      "widget": "select",
      "options": [
        "None",
        "Charcoal",
        "Gray",
        "Orange",
        "Red",
        "Green",
        "Yellow"
      ],
      "default": "Charcoal",
      "required": false
    },
    {
      "label": "Padding",
      "name": "padding",
      "widget": "select",
      "options": ["Large", "Medium", "Small", "Tiny"],
      "default": "Large",
      "required": false
    },
    {
      "label": "Opacity",
      "name": "opacity",
      "widget": "number",
      "default": 0.7,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1,
      "value_type": "float",
      "required": false
    },
    {
      "label": "Team members",
      "name": "items",
      "widget": "list",
      "summary": "Image",
      "fields": [
        {
          "label": "image",
          "name": "image_url",
          "widget": "image",
          "default": "https://placehold.co/500x500"
        },
        {
          "label": "Name",
          "name": "name",
          "widget": "string",
          "default": "Joe Schmoe"
        },
        {
          "label": "Title",
          "name": "title",
          "widget": "string",
          "default": "Lead Procrastinator",
          "required": false
        }
      ],
      "default": [
        {
          "image_url": "https://cdn.tailgrids.com/1.0/assets/images/team/team-01/image-01.jpg",
          "name": "Joe Schmoe",
          "title": "Lead Procrastinator"
        },
        {
          "image_url": "https://placehold.co/500x500",
          "name": "Anna Morris",
          "title": "Assistant Regional Manager"
        },
        {
          "image_url": "https://placehold.co/500x500",
          "name": "Andy Breckenridge",
          "title": "Assistant to the Regional Manager"
        }
      ]
    }
  ]
}
