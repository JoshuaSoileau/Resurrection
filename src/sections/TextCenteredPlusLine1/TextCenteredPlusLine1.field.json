{
  "label": "[Text] Text w/ line",
  "summary": "{{fields.markdown_content}}",
  "name": "TextCenteredPlusLine1",
  "widget": "object",
  "fields": [
    {
      "label": "Hide",
      "name": "hide",
      "widget": "boolean",
      "default": false,
      "required": false
    },
    {
      "label": "Anchor link url",
      "name": "anchor",
      "widget": "string",
      "default": "",
      "required": false
    },
    {
      "label": "Include line",
      "name": "include_line",
      "widget": "boolean",
      "default": true,
      "required": false
    },
    {
      "label": "Text alignment",
      "name": "alignment",
      "widget": "select",
      "options": ["left", "center", "right"],
      "default": "center"
    },
    {
      "label": "Content",
      "name": "markdown_content",
      "widget": "markdown",
      "default": "#This is a title"
    },
    {
      "label": "Background image",
      "name": "image_url",
      "widget": "image",
      "default": "https://images.unsplash.com/photo-1503516459261-40c66117780a",
      "required": false
    },
    {
      "label": "Overlay color",
      "name": "overlay_color",
      "widget": "select",
      "options": [
        "None",
        "Charcoal",
        "Gray",
        "Orange",
        "Red",
        "Green",
        "Yellow"
      ],
      "default": "Charcoal",
      "required": false
    },
    {
      "label": "Opacity",
      "name": "opacity",
      "widget": "number",
      "default": 0.7,
      "min": 0.1,
      "max": 1.0,
      "step": 0.1,
      "value_type": "float",
      "required": false
    }
  ]
}
