{
  "label": "[Images] Image w/stylized text",
  "summary": "{{fields.markdown_content}}",
  "name": "ImagePlusTextStylized",
  "widget": "list",
  "fields": [
    {
      "label": "Hide",
      "name": "hide",
      "widget": "boolean",
      "default": false,
      "required": false
    },
    {
      "label": "Anchor link url",
      "name": "anchor",
      "widget": "string",
      "default": "",
      "required": false
    },
    {
      "label": "Alignment",
      "name": "alignment",
      "widget": "select",
      "options": ["Image on left", "Image on right"],
      "default": "Image on left"
    },
    {
      "label": "Content",
      "name": "markdown_content",
      "widget": "markdown",
      "default": "This is a lengthier version of text. It contains more characters than the headline."
    },
    {
      "label": "Image",
      "name": "image_url",
      "widget": "image",
      "default": "https://images.unsplash.com/photo-1501631259223-89d4e246ed23",
      "required": false
    },
    {
      "label": "Allow content to touch edge of screen?",
      "name": "max_content",
      "widget": "boolean",
      "default": false,
      "required": false
    },
    {
      "label": "Background Color",
      "name": "background_color",
      "widget": "select",
      "options": ["White", "Gray", "Charcoal", "Dark Green"],
      "default": "White"
    }
  ]
}
